<style  type="text/css">
 .form-group {margin: 16px;
 }
 
 .title {margin: 8px;
 }
 .body {margin: 8px;
 }
 
  
</style>

<%= form_for(book) do |f| %>
  <div class="form-group">
    <div class="title"><%= f.label :Title %></div>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>

  <div class="form-group">
  	<div class="body"><%= f.label :Opinion %></div>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>

  <div class="actions row">
    <%= f.submit class: "btn btn-success col-xs-12" %>
  </div>
<% end %>






