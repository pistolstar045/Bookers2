<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
     <table class="table table-user-show">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
       </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
         <td><%= link_to user_path(@user) do %>
          <% if @user.profile_image.attached? %>
           <%= image_tag @user.profile_image, size: "80x80" %>
          <% else %>
           <%= image_tag 'no_image.jpg', size: "80x80" %>
          <% end %>
         <% end %>
         </td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
       </tr>
       <% end %>
       </tbody>
     </table>
   </div>
  </div>
 </div>
 
 
 
 
 
 
 





