<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-xs-9">
  	  <table class="table table-sm user-index">
	  	  <h2>Users</h2>
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
  	    </thead>
  	  	<tbody>
  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td> 
	  	  	  <% if user.profile_image.attached? %>
              <%= image_tag user.profile_image, size: "80x80" %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "80x80" %>
            <% end %>
            </td>
            <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", "/users/#{user.id}" %></td>
	  	  	</tr>
  	  	  <% end %>
  	  	</tbody>
  	  </table>
  	</div>
  </div>
  
  
  